{
    "editor.fontSize": 14,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.lineNumbers": "relative",
    "editor.tabSize": 2,
    "editor.minimap.enabled": false,

    "breadcrumbs.enabled": true,

    "terminal.integrated.fontSize": 14,

    "vs-kubernetes": {
        "vs-kubernetes.helm-path.mac": "/Users/riljian/.vs-kubernetes/tools/helm/darwin-amd64/helm",
        "vs-kubernetes.minikube-path.mac": "/Users/riljian/.vs-kubernetes/tools/minikube/darwin-amd64/minikube",
        "vs-kubernetes.draft-path.mac": "/Users/riljian/.vs-kubernetes/tools/draft/darwin-amd64/draft"
    },

    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "octref.vetur"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "vim.hlsearch": true,
    "vim.ignorecase": false,
    "vim.easymotion": true,
    "vim.foldfix": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        // easy motion
        {
            "before": [" "],
            "after": ["leader", "leader", "s"]
        },
        // tab
        {
            "before": ["t", "l"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["t", "h"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["t", "k"],
            "commands": ["workbench.action.keepEditor"]
        },
        {
            "before": ["t", "p"],
            "commands": ["workbench.action.closeOtherEditors"]
        },
        // toggle
        {
            "before": ["z", "h"],
            "commands": ["editor.action.showHover"]
        },
        {
            "before": ["z", "b"],
            "commands": ["editor.debug.action.toggleBreakpoint"]
        },
        {
            "before": ["z", "f"],
            "commands": ["editor.action.formatDocument"]
        },
        // toggle debugger
        {
            "before": ["z", "d", "s"],
            "commands": ["workbench.action.debug.start"]
        },
        {
            "before": ["z", "d", "c"],
            "commands": ["workbench.action.debug.continue"]
        },
        {
            "before": ["z", "d", "r"],
            "commands": ["workbench.action.debug.restart"]
        },
        {
            "before": ["z", "d", "e"],
            "commands": ["workbench.action.debug.stop"]
        },
        {
            "before": ["z", "d", "i"],
            "commands": ["workbench.action.debug.stepInto"]
        },
        {
            "before": ["z", "d", "o"],
            "commands": ["workbench.action.debug.stepOut"]
        },
        {
            "before": ["z", "d", "n"],
            "commands": ["workbench.action.debug.stepOver"]
        },
        // go
        {
            "before": ["g", "r"],
            "commands": ["editor.action.goToReferences"]
        },
        {
            "before": ["g", "p"],
            "commands": ["editor.action.marker.next"]
        },
        {
            "before": ["g", "c"],
            "commands": ["workbench.action.editor.nextChange"]
        },
        {
            "before": ["g", "t"],
            "commands": ["workbench.action.terminal.focus"]
        }
    ],

    "prettier.semi": false,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "none",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "vue"
    ]
}
